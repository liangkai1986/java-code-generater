<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smartwater.javacode.dao.UserDao">

    <resultMap id="userResultMap" type="com.smartwater.javacode.entity.User">
        <id column="id" property="id" jdbcType="INT"/> 
        <result column="user_name" property="userName" jdbcType="VARCHAR"/> 
        <result column="email" property="email" jdbcType="VARCHAR"/> 
        <result column="age" property="age" jdbcType="INT"/> 

        
        
    </resultMap>

    <sql id="userColumns">
        user.ID AS "id",
        user.user_name AS "userName",
        user.email AS "email",
        user.age AS "age"
    </sql>

    <sql id="userJoins">
        
    </sql>

    <select id="get" resultMap="userResultMap">
        SELECT
        <include refid="userColumns" />
        FROM user <include refid="userJoins" />
        <where>
        user.ID = #{id}
        </where>
    </select>

    <select id="findList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns" />
        FROM user <include refid="userJoins" />
        <where>
        </where>
    </select>

    <select id="findAllList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns" />
        FROM user <include refid="userJoins" />
        <where>
        </where>
    </select>

    <insert id="insert">
        INSERT INTO user(
            ID,
            user_name,
            email,
            age
        )
        VALUES (
            #{id},
            #{userName},
            #{email},
            #{age}
        )
    </insert>

    <insert id="insertBatch">
        INSERT INTO user(
            ID,
            user_name,
            email,
            age
        )
        VALUES
        <foreach collection ="list" item="user" separator =",">
        (
            #{user.id},
            #{user.userName},
            #{user.email},
            #{user.age}
        )
        </foreach>
    </insert>

    <update id="update">
        UPDATE user SET
        ID = #{id},
        user_name = #{userName},
        email = #{email},
        age = #{age}
        WHERE ID = #{id}
    </update>

    <update id="delete">
        DELETE FROM user
        WHERE ID = #{id}
    </update>

</mapper>